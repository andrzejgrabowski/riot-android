<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gotenna_connection_title"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
     />

    <Button
        android:id="@+id/goTennaInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="12dp"
        android:text="inicjalizacja" />

    <Button
        android:id="@+id/goTennaConnectLast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goTennaInit"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="połącz ponownie" />

    <Button
        android:id="@+id/goTennaConnectNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/goTennaConnectLast"
        android:layout_toEndOf="@+id/goTennaConnectLast"
        android:layout_below="@id/goTennaInit"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="połącz" />

    <Button
        android:id="@+id/goTennaDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/goTennaConnectNew"
        android:layout_toEndOf="@+id/goTennaConnectNew"
        android:layout_below="@id/goTennaInit"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="rozłącz" />

    <Button
        android:id="@+id/goTennaConnectTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goTennaConnectLast"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="test połączenia" />

    <Button
        android:id="@+id/goTennaInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/goTennaConnectTest"
        android:layout_toEndOf="@+id/goTennaConnectTest"
        android:layout_below="@id/goTennaConnectLast"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="informacje o połączeniu" />

    <Button
        android:id="@+id/goTennaUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goTennaConnectTest"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="12dp"
        android:text="aktualizuj parametry" />

</RelativeLayout>